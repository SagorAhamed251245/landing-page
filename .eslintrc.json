{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["next/core-web-vitals", "eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-unused-expressions": "warn",
    "prefer-const": "error",
    "no-console": "warn",
    "no-undef": "error",
    "react/no-unescaped-entities": "off"
  },
  "globals": {
    "process": "readonly"
  }
}
